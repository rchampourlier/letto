{
  "workflows": [
    {
      "name": "setDueDateOnLabelChange",
      "webhook_id": "???",
      "conditions": [
        {
          "type": "string_comparison",
          "target": "payload",
          "path": "action.type",
          "value": "addLabelToCard"
        }
      ],
      "action": {
        "type": "operation",
        "function": "api_call",
        "arguments": {
          "verb": "POST",
          "target": "/cards/{{ action.card.id }}",
          "payload": {
            "due": {
              "type": "operation",
              "function": "add",
              "arguments": [
                {
                  "type": "expression",
                  "value": "action.date"
                },
                {
                  "type": "operation",
                  "function": "min",
                  "arguments": [
                    {
                      "type": "operation",
                      "function": "map",
                      "arguments": [
                        {
                          "type": "operation",
                          "function": "api_call",
                          "arguments": {
                            "verb": "GET",
                            "target": "/cards/{{ action.card.id }}/labels"
                          }
                        },
                        {
                          "active contact": 7,
                          "passive contact": 30
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        }
      }
    }
  ]
}
